<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>listTrainController</servlet-name>
        <servlet-class>controller.TrainsListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetCarriageSeatsServlet</servlet-name>
        <servlet-class>controller.GetCarriageSeatsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScheduleServlet</servlet-name>
        <servlet-class>controller.ScheduleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchTicketServlet</servlet-name>
        <servlet-class>controller.SearchTicketServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>controller.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listTrainController</servlet-name>
        <url-pattern>/listtrain</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCarriageSeatsServlet</servlet-name>
        <url-pattern>/getcarriageseats</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScheduleServlet</servlet-name>
        <url-pattern>/schedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchTicketServlet</servlet-name>
        <url-pattern>/searchticket</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
</web-app>
